/* ads */
{
  "taxon_id":     "<ObjectId>",
  "title":        "<String>",
  "description":  "<String>", /* Text */
  "type":         "<String>", /* For sale, For rent, For purchase, ... */
  /* TODO
   a day, a week, 2 weeks, a month, 2 months, ..
  "placement_period": ""
  */
  "date":
  {
    "published_at": "<Timestamp>",
    "modified_at":  "<Timestamp>",
    "expire_at":    "<Timestamp>",
    "deleted_at":   "<Timestamp>"
  },
  /* TODO
    field for negotiable, free, paid, ...
  */
  "prices": /* <Array> */
  [{
    "amount":         "<Double>",
    "currency_code":  "<String>",
  }],
  "author":
  {
    "_id":        "<ObjectId>",
    "address_id": "<ObjectId>",    
    "ip":         "<String>"
  },
  "condition":
  {
    "percentage": "<Integer>",
    "label":      "<String>", /* new, old, good, ... */
  },   
  "state": /* status */
  {
    "premium":  "<Boolean>",
    "enabled":  "<Boolean>",
    "active":   "<Boolean>",
    "spam":     "<Boolean>"
  },
  "activation_hash": "<String>", /* activation code */
